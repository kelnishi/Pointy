<Window x:Class="Pointy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pointy"
        mc:Ignorable="d"
        Title="MainWindow" d:DesignWidth="1614.667" d:DesignHeight="1004" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Closing="Window_Closing">
    <Grid Height="720" VerticalAlignment="Center" HorizontalAlignment="Center" Width="1280" Margin="0,0,0,0" Background="Black">
        <Image x:Name="outputframe" HorizontalAlignment="Left" Height="720" VerticalAlignment="Top" Width="1280" Margin="0,0,0,0" Source="{Binding CurrentCameraImage}"/>
        <Button x:Name="startbutton" Content="Start" HorizontalAlignment="Left" Height="71" Margin="0,754,0,-105" VerticalAlignment="Top" Width="416" Click="StartButton_Click"/>
        
    </Grid>
</Window>
